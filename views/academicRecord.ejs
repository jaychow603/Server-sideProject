<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Academic Records</title>
    <link rel="stylesheet" href="/stylesheets/login&record.css">
    <link rel="stylesheet" href="/stylesheets/academicRecordStyle.css">
    <link rel="stylesheet" href="/stylesheets/navBarStyle.css">
    <style>
        .hidden {
            display: none !important;
        }
    </style>
</head>
<body>
    <%- include('header') %>
    <br>
    <h1>Students Enrolled in Course</h1>
    <button onclick="location.href='/course'">Back to Course List</button>
    <br>
    <table>
        <tr>
            <th>Student Name</th>
            <th>Student ID</th>
        </tr>
        <% students.forEach(student => { %>
            <tr class="student-row" onclick="location.href='/academic-record/detail/<%= student.stud_id %>?courseId=<%= courseId %>'">
                <td><%= student.name %></td>
                <td><%= student.stud_id %></td>
            </tr>
        <% }); %>
    </table>
</body>
</html>

