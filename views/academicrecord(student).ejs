<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/academic.css">
    <title>Academic Records</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
        }
        th {
            background-color: #6c928c;
        }
    </style>
</head>
<body>

    <button onclick="location.href='/homepage'">Back to Homepage</button>
<div class="term-summary">
    <h1>Term Summary</h1>
    <h3>FTUG - Undergraduate (FT)</h3>
    <div class="term">
        <p>Year:  <%= Semester %></p>
        <p>Eligible to Enroll: Yes</p>
        <p>Primary Program:</p>
        <div class="level-load">
            <h5>Level/ Load</h5>

            <p>Approved Academic Load: Full-Time</p>
        </div>
    </div>
    <h2>Courses</h2>
    <table>
        <thead>
            <tr>
                <th>Course Code</th>
                <th>Course Name</th>
                <th>Units</th>
                <th>Grade</th>
                <th>Enrollment Status</th>
            </tr>
        </thead>
        <tbody>
            <% records.forEach(record => { %>
                <% const course = coursesInformation.find(c => c.Course_ID === record.Course_ID); %>
                <tr>
                    <td><%= course ? course.Course_ID : 'N/A' %></td>
                    <td><%= course ? course.name_subj : 'N/A' %></td>
                    <td><%= course ? course.Credit : 'N/A' %></td>
                    <td><%= record.Grade %></td>

   
                    <td>Enrolled</td>
                     <!-- Enrollment Status Reason -->
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>
</body>
</html>
