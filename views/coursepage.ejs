<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/coursepage.css">
    <title>Course List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            display: flex;
            flex-direction: column;
        }
        h1 {
            text-align: center;
        }
        .container {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }
        .course-list {
            flex: 1;
            margin-right: 20px;
            max-width: 250px;
        }
        .schedule-container {
            flex: 2;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 4px;
            text-align: left;
            font-size: 14px;
        }
        th {
            background-color: #f2f2f2;
        }
        .course-list a {
            display: block;
            padding: 8px;
            text-decoration: none;
            color: #007BFF;
        }
        .course-list a:hover {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
<div class="container">
    <div class="course-list">
        <br/>
        <a href="/homepage">Back to Homepage</a>
        <br/>
        <table>
            <thead>
                <tr>
                    <th>Course</th>
                </tr>
            </thead>
            <tbody>
                <% courses.forEach(course => { %>
                    <tr>
                        <td><a href="/course/<%= course.Course_ID %>"><%= course.Course_ID %> <%= course.name_subj %></a></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

    <div class="schedule-container">
        <h1>My Course Schedule</h1>
        
        <table>
            <thead>
                <tr>
                    <th>Time</th>
                    <th>Monday</th>
                    <th>Tuesday</th>
                    <th>Wednesday</th>
                    <th>Thursday</th>
                    <th>Friday</th>
                    <th>Saturday</th>
                    <th>Sunday</th>
                </tr>
            </thead>
            <tbody>
                <% const times = ['08:00', '09:00', '10:00', '11:00', '12:00', '13:00', '14:00', '15:00', '16:00', '17:00', '18:00']; %>
                <% times.forEach(time => { %>
                    <tr>
                        <td><%= time %></td>
                        <% ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'].forEach(day => { %>
                            <td>
                                <% courses.forEach(subject => { %>
                                    <% if (subject.Schedule.includes(day) && subject.fitsSchedule(time)) { %>
                                        <div><%= subject.name_subj %></div>
                                    <% } %>
                                <% }); %>
                            </td>
                        <% }); %>
                    </tr>
                <% }); %>
            </tbody>
        </table>

        <% if (Role == 'student') { %>
            <div class="meeting-info">
                <p>Meeting Information:</p>
                <table>
                    <tr>
                        <th>Class</th>
                        <th>Course Title</th>
                        <th>Instructor</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                    </tr>
                    <% courses.forEach(course => { %>
                    <tr>
                        <td><%= course.Course_ID %></td>
                        <td><%= course.name_subj %></td>
                        <% Teacher.forEach(i => { %>
                            <% if (course.Teacher_ID === i.Teacher_ID ) { %>
                                <td><%= i.name %></td>
                            <% } %>
                        <% }); %>
                        <td><!-- Start Date Here --></td>
                        <td><!-- End Date Here --></td>
                    </tr>
                    <% }); %>
                </table>
            </div>
        <% } %>
    </div>
</div>
</body>
</html>